{% block campaignchain_hook_campaignchain_due_widget %}
    {% javascripts '@clockpicker_js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% stylesheets '@clockpicker_css' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}

    {% spaceless %}
        {% if form.date is defined %}
            {{ form_widget(form) }}
        {% else %}
            {{ form_row(form.days, { }) }}
            {{ form_row(form.time, { 'attr': {
                'class': 'clockpicker'
            }}) }}
            {{ form_rest(form) }}
            <script type="text/javascript">
                $('.clockpicker').clockpicker({
                    placement: 'right',
                    align: 'left',
                    autoclose: 'true'
                });
            </script>
        {% endif %}
    {% endspaceless %}
{% endblock %}